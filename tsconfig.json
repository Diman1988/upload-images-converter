{
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "target": "es6",
    "module": "es6",
    "sourceMap": false,
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "removeComments": true,
    "lib": [
      "es2017",
      "DOM"
    ],
    "paths": {
      "@app/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "webserver/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "cypress",
    "cypress.config.ts"
  ]
}